<% navigation_add '邀請朋友', new_invitation_path(resource) %>

<div class="container">
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
    <h2 class="form-signin-heading">邀請朋友</h2>
    <%= bootstrap_devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-group">
        <%= f.label :email %>
    	  <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    	</div>
    <% end -%>

    <div class="form-group">
      <%= f.submit "發送邀請", class: 'btn btn-lg btn-block btn-primary' %>
    </div>
  <% end %>
</div>